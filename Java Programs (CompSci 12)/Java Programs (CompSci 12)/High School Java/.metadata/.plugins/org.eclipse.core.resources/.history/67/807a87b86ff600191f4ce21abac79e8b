import java.util.Scanner;

class Assignment6B
{
	public static  void main ( String[]   args)	
	{
		Scanner input = new Scanner (System.in);

		int num1,desicion=0,num2=1,num3;

	while (num2==1) 

		{

			System.out.println("Type in a number "); 
			num1=input.nextInt();
			System.out.println("Type in a number you want to devide the first by "); 
			num3=input.nextInt();

			desicion=num1%num3;
			System.out.println("the number is" + desicion);

			
			System.out.println("Would you like to continue?"); 
			num2=input.nextInt();
}}}
